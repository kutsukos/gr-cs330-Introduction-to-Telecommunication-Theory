<?xml version="1.0"?>
<block>
  <name>Text Message Source</name>
  <key>cs330_msg_source</key>
  <category>[cs330]</category>
  <import>import cs330</import>
  <make>cs330.msg_source($msg, $delay, $repeat)</make>
  
  <param>
    <name>Message</name>
    <key>msg</key>
    <value>"HELLO WORLD"</value>
    <type>string</type>
  </param>

  <param>
    <name>Delay (seconds)</name>
    <key>delay</key>
    <value>0.01</value>
    <type>real</type>
  </param>

  <param>
    <name>Repeat</name>
    <key>repeat</key>
    <type>enum</type>
    <option>
      <name>Yes</name>
      <key>True</key>
    </option>
    <option>
      <name>No</name>
      <key>False</key>
    </option>
  </param>

  <source>
    <name>msg</name>
    <type>message</type>
  </source>
</block>
